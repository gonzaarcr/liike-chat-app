{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    // "moduleResolution": "Bundler", // introduced in TypeScript 5.0
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node",
    "aws-sdk"
  ],
  "include": ["src/**/*.ts"]
}
